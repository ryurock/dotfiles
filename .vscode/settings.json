{
  // ペースト時の自動format
  "editor.formatOnPaste": true,
  // 保存時の自動format
  "editor.formatOnSave": true,
  // tabの空白の数
  "editor.tabSize": 2,
  // minimapの非表示
  "editor.minimap.enabled": false,
  // ホワイトスペースを視覚化
  "editor.renderWhitespace": "all",
  // スニペット予測の表示位置
  "editor.snippetSuggestions": "top",
  "window.zoomLevel": 0,
}